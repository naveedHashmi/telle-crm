<div class="overflow-auto">
  <% notes.each do |note| %>
    <div class="accordion-item">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#note<%= note.id %>" aria-expanded="false" aria-controls="collapseTwo">
        <div class="post-item clearfix">
          <h5 class="card-title"><%= User.first.name %> <span>| <%= note.created_at.strftime('%A, %b %e, %Y') %></span></h5>
          <p><%= note.description.slice(0, 50) %><%= note.description.length > 50 ? '....' : '' %></p>
        </div>
      </button>
      <div id="note<%= note.id %>" class="accordion-collapse collapse">
        <div class="accordion-body">
          <p><%= note.description %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
