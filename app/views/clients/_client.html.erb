<tr id="<%= dom_id client %>">
  <td> <%= check_box_tag "client-#{client.id}", client.id, false,  id:"checkbox-#{client.id.to_s}", class:'client-checkbox', "data-client-id": client.id %></td>
  <td><%= client.name %></td>
  <td><%= client.amount_owed %></td>
  <td><%= client.claim_no %></td>
  <td><%= client.lawsuit_no %></td>
  <td><%= client.phone %></td>
  <td><%= client.address %></td>
  <td><%= client.email %></td>
  <td>Owner</td>
  <td><%= link_to "View", client, class: 'btn btn-primary' %></td>
</tr>
