<p style="color: green"><%= notice %></p>

<div class='d-flex justify-content-between align-items-center'>
  <div class='col-2 d-flex justify-content-between align-items-center'>
    <h1>Leads</h1>
    <select id="status" class="form-control">
      <option value="" selected disabled>List</option>
      <% Lead.statuses.keys.each do |status| %>
        <option value="<%= status %>"><%= status.humanize %></option>
      <% end %>
    </select>
  </div>
  <div class='col-4 d-flex justify-content-between align-items-center'>
    <%= link_to "Import List", new_lead_path, class: 'btn btn-primary' %>
    <%= link_to "Create List", new_lead_path, class: 'btn btn-primary' %>
    <%= link_to "New Lead", new_lead_path, class: 'btn btn-primary' %>
  </div>
</div>

<div id="clients">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Status</th>
          <th scope="col">Amount Owed</th>
          <th scope="col">Property Sold</th>
          <th scope="col">Country</th>
          <th scope="col">Date Sold</th>
          <th scope="col">Mortgage Company</th>
          <th scope="col">Initial Bid Amount</th>
          <th scope="col">Sold Amount</th>
        </tr>
      </thead>
      <tbody>
      <% @leads.each do |lead| %>
        <%= render lead %>
        <% end %>
      </tbody>
    </table>

</div>
