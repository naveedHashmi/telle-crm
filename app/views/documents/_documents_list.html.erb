<ol class=''>
  <% @client.documents.each do |document|%>
    <div >
      <li class='d-flex justify-content-between w-100'>
        <div class='d-flex justify-content-between align-items-center col-11'>
          <%= link_to document.name, url_for(document.file), target: '_blank', data: { turbo_stream: true} %>
          <div>
            <%= link_to 'Request Sign', sign_client_document_path(document.client_id, document), data: { turbo: false }, class: 'btn btn-secondary' %>
            <%= link_to 'Configure', configure_client_document_path(document.client_id, document), data: { turbo: false }, class: 'btn btn-info' %>
          </div>
        </div>
        <div class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#document-preview-<%= document.id %>" aria-expanded="false" aria-controls="collapseTwo">
        </div>
      </li>
      <div id="document-preview-<%= document.id %>" class="accordion-collapse collapse ">
        <div class="accordion-body h-100">
          <iframe src="<%= url_for(document.file) %>", height='800', width='700' ></iframe>
        </div>
      </div>
    </div>
  <% end %>
</ol>
